<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Channel</th>
      <th>Title</th>
      <th>Token</th>
      <th>Price</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.channel.name %></td>
        <td><%= product.title %></td>
        <td><%= product.token %></td>
        <td><%= product.price %></td>
        <td><%= product.link %></td>
        <td><%= link_to 'Show', channel_product_path(@channel, product) %></td>
        <td><%= link_to 'Edit', edit_channel_product_path(@channel, product) %></td>
        <td><%= link_to 'Destroy', channel_product_path(@channel, product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

